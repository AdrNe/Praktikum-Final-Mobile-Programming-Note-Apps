<?xml version="1.0" encoding="utf-8"?>
<!--TODO 8 buat resource dengan nama background_button.xml di dalam package drawable-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--TODO 9 Ketika Button ada aksi klik akan menampilkan warna blue -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/coral" />
            <corners android:radius="@dimen/_100sdp"/>
            <stroke android:color="@android:color/black"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_50sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/coral_pink" />
            <corners android:radius="@dimen/_100sdp"/>
            <stroke android:color="@android:color/black"
                android:width="@dimen/_1sdp"/>
            <corners android:radius="@dimen/_50sdp" />
        </shape>
    </item>
</selector>